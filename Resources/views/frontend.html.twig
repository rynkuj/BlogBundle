{% extends "BlogBundle::base.html.twig" %}
{% block body %}
  <div class="container">
    {% block header %}
      {% include "BlogBundle::frontend.header.html.twig" %}
    {% endblock %}
    <div id="wrapper" class="row">
      <div id="content" class="col-md-8">{% block blog_content %}Your content Here!{% endblock %}</div>
      <div id="sidebar" class="col-md-4">
        {% block sidebar %}
          {% include "BlogBundle::frontend.sidebar.html.twig" %}
        {% endblock %}
      </div>
    </div>
    {% block footer %}
      {% include "BlogBundle::frontend.footer.html.twig" %}
    {% endblock %}
  </div>
{% endblock %}

{% block analitycs %}
  {% include "BlogBundle::frontend.analytics.html.twig" %}
{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  {% stylesheets
  'bundles/blog/css/main.css'
  filter='?yui_css' %}
  <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="all"/>
  {% endstylesheets %}
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  {% javascripts
  'bundles/blog/js/cookie.js'
  'bundles/blog/js/blog.js'
  filter='?yui_js' %}
  <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}
