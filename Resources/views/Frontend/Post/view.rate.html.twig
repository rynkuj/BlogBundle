<article class="row">
  <h3>{% trans %}Did you like this post{% endtrans %}?</h3>

  <p>
  <span id="rating">
  <a class="rating" href="#" data-url="{{ path('_blog_rate', {'entity': 'Post', 'id': post.id , 'rate': '+1'}) }}">
    <img src="{{ asset('bundles/blog/img/like.png')}}" class="rating"/>
  </a>
  <a class="rating" href="#" data-url="{{ path('_blog_rate', {'entity': 'Post', 'id': post.id , 'rate': '-1'}) }}">
    <img src="{{ asset('bundles/blog/img/not-like.png')}}" class="rating"/>
  </a>
  </span>
  </p>
</article>
