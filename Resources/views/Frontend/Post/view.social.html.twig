<article class="row social">
  <h4>{% trans %}Share{% endtrans %}</h4>
  <ul class="blog-social-share-list">
    <li>
      <a target="_blank"
         href="{{ 'http://www.facebook.com/sharer/sharer.php?s=100&p[url]=' ~ url('_blog_view', { 'slug' : post.slug }) ~
         '&p[images][0]=' ~ post.image ~'&p[title]=' ~ post | url_encode(true) ~ '&p[summary]=' ~
         post.intro | striptags | raw | truncate(150) | url_encode(true) }}">
        <img src="{{ asset('bundles/blog/img/social/facebook.png')}}"/>
      </a>
    </li>
    <li>
      <a target="_blank"
         href="{{ 'http://twitter.com/home?status=' ~ post | url_encode(true) ~ ' ' ~
         url('_blog_view', { 'slug' : post.slug }) ~ ' via @' ~ twitter }}">
        <img src="{{ asset('bundles/blog/img/social/twitter.png')}}"/>
      </a>
    </li>
    <li>
      <a target="_blank"
         href="{{ 'https://plus.google.com/share?url=' ~  url('_blog_view', { 'slug' : post.slug }) }}">
        <img src="{{ asset('bundles/blog/img/social/google+.png')}}"/>
      </a>
    </li>
    <li>
      <a target="_blank" href="{{ 'http://www.linkedin.com/shareArticle?mini=true&url=' ~
      url('_blog_view', { 'slug' : post.slug }) ~ '&title=' ~ post | url_encode(true)  ~ '&summary=' ~
      post.intro | striptags | raw | truncate(150) | url_encode(true) }}">
        <img src="{{ asset('bundles/blog/img/social/linkedin.png')}}"/>
      </a>
    </li>
  </ul>
</article>
